{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": [
      "node",
      "vite/client"
    ],
  },
  "include": [
    "src/index.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/lib/**/*.js",
    "src/lib/**/*.jsx"
  ],
  "exclude": [
    "vite.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}