{
  "name": "stadtplan",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/topicmaps/stadtplan/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/topicmaps/stadtplan"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "stadtplan:build",
        "host": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "stadtplan:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "stadtplan:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "stadtplan:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "stadtplan:build:development"
        },
        "production": {
          "buildTarget": "stadtplan:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../coverage/apps/topicmaps/stadtplan"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
